<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Webhooks - Salon Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'webhooks' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <h2 class="mb-4"><i class="bi bi-broadcast text-primary me-2"></i>Webhooks</h2>

        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i>
          Configure webhook URLs to receive notifications when events occur. Your server will receive POST requests with event data.
        </div>

        <!-- Existing Webhooks -->
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Configured Webhooks</h5>
          </div>
          <div class="card-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Event</th>
                  <th>URL</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="webhooksList">
                <% webhooks.forEach(webhook => { %>
                <tr data-name="<%= webhook.name %>">
                  <td><code><%= webhook.name %></code></td>
                  <td><small class="text-break"><%= webhook.url %></small></td>
                  <td>
                    <span class="badge bg-<%= webhook.enabled ? 'success' : 'secondary' %>">
                      <%= webhook.enabled ? 'Active' : 'Disabled' %>
                    </span>
                  </td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Edit this webhook" onclick="editWebhook('<%= webhook.name %>', '<%= webhook.url %>', <%= webhook.enabled %>, '<%= webhook.secret || '' %>')">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete this webhook" onclick="deleteWebhook('<%= webhook.name %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }) %>
                <% if (webhooks.length === 0) { %>
                <tr><td colspan="4" class="text-center text-muted">No webhooks configured</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Add New Webhook -->
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Add/Edit Webhook</h5>
          </div>
          <div class="card-body">
            <form id="webhookForm">
              <div class="row">
                <div class="col-md-4 mb-3">
                  <label class="form-label">Event Name</label>
                  <select class="form-select" id="webhookName" name="name" required>
                    <option value="">Select event...</option>
                    <option value="call_started">Call Started</option>
                    <option value="call_ended">Call Ended</option>
                    <option value="call_transferred">Call Transferred</option>
                    <option value="ticket_purchased">Ticket Purchased</option>
                    <option value="sponsor_inquiry">Sponsor Inquiry</option>
                    <option value="voicemail_received">Voicemail Received</option>
                  </select>
                </div>
                <div class="col-md-8 mb-3">
                  <label class="form-label">Webhook URL</label>
                  <input type="url" class="form-control" id="webhookUrl" name="url" placeholder="https://your-server.com/webhook" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">Secret (Optional)</label>
                  <input type="text" class="form-control" id="webhookSecret" name="secret" placeholder="Shared secret for signature verification">
                  <small class="text-muted">Used to sign webhook payloads for verification</small>
                </div>
                <div class="col-md-6 mb-3 d-flex align-items-end">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="webhookEnabled" name="enabled" checked>
                    <label class="form-check-label" for="webhookEnabled">Enabled</label>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="Save webhook configuration">
                <i class="bi bi-save me-2"></i>Save Webhook
              </button>
            </form>
          </div>
        </div>

        <!-- Webhook Payload Examples -->
        <div class="card mt-4">
          <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-code-slash me-2"></i>Payload Examples</h5>
          </div>
          <div class="card-body">
            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#payload-call">Call Events</a></li>
              <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#payload-ticket">Ticket Purchase</a></li>
              <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#payload-sponsor">Sponsor Inquiry</a></li>
            </ul>
            <div class="tab-content mt-3">
              <div class="tab-pane fade show active" id="payload-call">
                <pre class="bg-dark text-light p-3 rounded"><code>{
  "event": "call_started",
  "timestamp": "2025-01-15T10:30:00Z",
  "data": {
    "callSid": "CA...",
    "fromNumber": "+15551234567",
    "toNumber": "+15559876543"
  }
}</code></pre>
              </div>
              <div class="tab-pane fade" id="payload-ticket">
                <pre class="bg-dark text-light p-3 rounded"><code>{
  "event": "appointment_booked",
  "timestamp": "2025-01-15T10:35:00Z",
  "data": {
    "confirmationCode": "SALON-ABC123",
    "customerName": "John Smith",
    "service": "Haircut & Style",
    "stylist": "Sarah Johnson",
    "appointmentDate": "2025-01-20T14:00:00Z",
    "totalPrice": 65.00
  }
}</code></pre>
              </div>
              <div class="tab-pane fade" id="payload-sponsor">
                <pre class="bg-dark text-light p-3 rounded"><code>{
  "event": "sponsor_inquiry",
  "timestamp": "2025-01-15T10:40:00Z",
  "data": {
    "contactName": "Jane Doe",
    "companyName": "Acme Corp",
    "phone": "+15551234567",
    "interestedTier": "Premium"
  }
}</code></pre>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el) });
  </script>
  <script>
    const token = '<%= token %>';

    document.getElementById('webhookForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = {
        name: form.name.value,
        url: form.url.value,
        secret: form.secret.value,
        enabled: form.enabled.checked ? 'true' : 'false'
      };

      const res = await fetch(`/admin/webhooks?token=${token}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        alert('Webhook saved!');
        location.reload();
      } else {
        alert('Failed to save webhook');
      }
    });

    function editWebhook(name, url, enabled, secret) {
      document.getElementById('webhookName').value = name;
      document.getElementById('webhookUrl').value = url;
      document.getElementById('webhookEnabled').checked = enabled;
      document.getElementById('webhookSecret').value = secret;
      window.scrollTo({ top: document.querySelector('.card-header.bg-primary').offsetTop - 100, behavior: 'smooth' });
    }

    async function deleteWebhook(name) {
      if (!confirm(`Delete webhook "${name}"?`)) return;
      await fetch(`/admin/webhooks/${name}?token=${token}`, { method: 'DELETE' });
      location.reload();
    }
  </script>
</body>
</html>
