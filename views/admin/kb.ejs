<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Knowledge Base - Salon Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'kb' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Knowledge Base</h2>
          <a href="/SalonSales/admin/kb/new?token=<%= token %>" class="btn btn-primary" data-bs-toggle="tooltip" title="Create a new article">
            <i class="bi bi-plus"></i> New Article
          </a>
        </div>

        <div class="card">
          <div class="card-body">
            <table class="table table-hover" id="kbTable">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Slug</th>
                  <th>Language</th>
                  <th>Chunks</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% docs.forEach(doc => { %>
                <tr onclick="highlightRow(event)">
                  <td><strong><%= doc.title %></strong></td>
                  <td><code><%= doc.slug %></code></td>
                  <td><span class="badge bg-secondary"><%= doc.language %></span></td>
                  <td><span class="badge bg-info"><%= doc._count?.chunks || 0 %></span></td>
                  <td><%= new Date(doc.createdAt).toLocaleDateString() %></td>
                  <td>
                    <a href="/SalonSales/admin/kb/<%= doc.id %>/edit?token=<%= token %>" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Edit this article">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <form action="/SalonSales/admin/kb/<%= doc.id %>/delete?token=<%= token %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this article?')">
                      <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete this article">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>

            <% if (docs.length === 0) { %>
              <p class="text-muted text-center">No knowledge base articles yet. Create your first article!</p>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el) });
  </script>
  <%- include('../partials/grid-helpers') %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      initGrid('kbTable', { perPage: 10 });
    });
  </script>
</body>
</html>
