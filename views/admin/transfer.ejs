<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Call Transfer - Salon Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'transfer' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <h2 class="mb-4"><i class="bi bi-telephone-forward text-warning me-2"></i>Call Transfer Settings</h2>

        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i>
          Configure where calls are transferred when the AI cannot help or when callers request to speak with a human.
        </div>

        <!-- Transfer Configuration -->
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Transfer Configuration</h5>
          </div>
          <div class="card-body">
            <form id="transferConfigForm">
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="transferEnabled" name="enabled" <%= config.enabled ? 'checked' : '' %>>
                <label class="form-check-label" for="transferEnabled"><strong>Enable Call Transfer</strong></label>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">Default Transfer Number</label>
                  <input type="tel" class="form-control" id="defaultTransferNumber" name="defaultTransferNumber" value="<%= config.defaultTransferNumber || '' %>" placeholder="+15551234567">
                  <small class="text-muted">Phone number to transfer calls to by default</small>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Max Wait Time (seconds)</label>
                  <input type="number" class="form-control" id="maxWaitTime" name="maxWaitTime" value="<%= config.maxWaitTime %>" min="5" max="120">
                  <small class="text-muted">Time to wait for answer before going to voicemail</small>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label">Transfer Message</label>
                <textarea class="form-control" id="transferMessage" name="transferMessage" rows="2"><%= config.transferMessage %></textarea>
                <small class="text-muted">Message played to caller while transferring</small>
              </div>

              <hr class="my-4">

              <h6><i class="bi bi-voicemail me-2"></i>Voicemail Settings</h6>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="voicemailEnabled" name="voicemailEnabled" <%= config.voicemailEnabled ? 'checked' : '' %>>
                <label class="form-check-label" for="voicemailEnabled">Enable Voicemail Fallback</label>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">Voicemail Number</label>
                  <input type="tel" class="form-control" id="voicemailNumber" name="voicemailNumber" value="<%= config.voicemailNumber || '' %>" placeholder="+15551234567">
                  <small class="text-muted">Dedicated voicemail line (optional)</small>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Voicemail Greeting</label>
                  <textarea class="form-control" id="voicemailGreeting" name="voicemailGreeting" rows="2"><%= config.voicemailGreeting %></textarea>
                </div>
              </div>

              <button type="submit" class="btn btn-warning" data-bs-toggle="tooltip" title="Save transfer configuration settings">
                <i class="bi bi-save me-2"></i>Save Transfer Settings
              </button>
            </form>
          </div>
        </div>

        <!-- Transfer Routes -->
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-signpost-split me-2"></i>Transfer Routes</h5>
          </div>
          <div class="card-body">
            <p class="text-muted">Configure different transfer destinations for specific departments or purposes.</p>

            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Route Name</th>
                  <th>Phone Number</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="routesList">
                <% routes.forEach(route => { %>
                <tr data-name="<%= route.name %>">
                  <td><strong><%= route.name %></strong></td>
                  <td><code><%= route.phoneNumber %></code></td>
                  <td><%= route.description || '-' %></td>
                  <td>
                    <span class="badge bg-<%= route.enabled ? 'success' : 'secondary' %>">
                      <%= route.enabled ? 'Active' : 'Disabled' %>
                    </span>
                  </td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Edit this transfer route" onclick="editRoute('<%= route.name %>', '<%= route.phoneNumber %>', '<%= route.description || '' %>', '<%= route.schedule || '' %>', <%= route.enabled %>)">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete this transfer route" onclick="deleteRoute('<%= route.name %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }) %>
                <% if (routes.length === 0) { %>
                <tr><td colspan="5" class="text-center text-muted">No transfer routes configured. Add some below.</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Add New Route -->
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Add/Edit Transfer Route</h5>
          </div>
          <div class="card-body">
            <form id="routeForm">
              <div class="row">
                <div class="col-md-4 mb-3">
                  <label class="form-label">Route Name</label>
                  <input type="text" class="form-control" id="routeName" name="name" placeholder="sales, support, sponsorship" required>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">Phone Number</label>
                  <input type="tel" class="form-control" id="routePhone" name="phoneNumber" placeholder="+15551234567" required>
                </div>
                <div class="col-md-4 mb-3">
                  <label class="form-label">Description</label>
                  <input type="text" class="form-control" id="routeDescription" name="description" placeholder="Sales team line">
                </div>
              </div>
              <div class="row">
                <div class="col-md-8 mb-3">
                  <label class="form-label">Schedule (JSON, optional)</label>
                  <input type="text" class="form-control font-monospace" id="routeSchedule" name="schedule" placeholder='{"Mon-Fri": "9am-5pm"}'>
                  <small class="text-muted">Business hours when this route is available</small>
                </div>
                <div class="col-md-4 mb-3 d-flex align-items-end">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="routeEnabled" name="enabled" checked>
                    <label class="form-check-label" for="routeEnabled">Enabled</label>
                  </div>
                </div>
              </div>
              <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="Save transfer route">
                <i class="bi bi-save me-2"></i>Save Route
              </button>
            </form>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el) });
  </script>
  <script>
    const token = '<%= token %>';

    document.getElementById('transferConfigForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = {
        enabled: form.enabled.checked ? 'true' : 'false',
        defaultTransferNumber: form.defaultTransferNumber.value,
        transferMessage: form.transferMessage.value,
        voicemailEnabled: form.voicemailEnabled.checked ? 'true' : 'false',
        voicemailNumber: form.voicemailNumber.value,
        voicemailGreeting: form.voicemailGreeting.value,
        maxWaitTime: form.maxWaitTime.value
      };

      const res = await fetch(`/admin/transfer/config?token=${token}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        alert('Transfer settings saved!');
      } else {
        alert('Failed to save settings');
      }
    });

    document.getElementById('routeForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = {
        name: form.name.value,
        phoneNumber: form.phoneNumber.value,
        description: form.description.value,
        schedule: form.schedule.value,
        enabled: form.enabled.checked ? 'true' : 'false'
      };

      const res = await fetch(`/admin/transfer/route?token=${token}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        alert('Route saved!');
        location.reload();
      } else {
        alert('Failed to save route');
      }
    });

    function editRoute(name, phone, desc, schedule, enabled) {
      document.getElementById('routeName').value = name;
      document.getElementById('routePhone').value = phone;
      document.getElementById('routeDescription').value = desc;
      document.getElementById('routeSchedule').value = schedule;
      document.getElementById('routeEnabled').checked = enabled;
      window.scrollTo({ top: document.querySelector('.card-header.bg-primary').offsetTop - 100, behavior: 'smooth' });
    }

    async function deleteRoute(name) {
      if (!confirm(`Delete route "${name}"?`)) return;
      await fetch(`/admin/transfer/route/${name}?token=${token}`, { method: 'DELETE' });
      location.reload();
    }
  </script>
</body>
</html>
