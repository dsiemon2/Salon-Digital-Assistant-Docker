<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Greeting Config - Salon Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    .sidebar { min-height: 100vh; background: #2c3e50; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .toast-container { position: fixed; top: 20px; right: 20px; z-index: 9999; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'greeting' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <h2 class="mb-4"><i class="bi bi-chat-quote text-primary me-2"></i>Greeting Configuration</h2>

        <!-- Toast container -->
        <div class="toast-container"></div>

        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-megaphone me-2"></i>Welcome Greeting</h5>
          </div>
          <div class="card-body">
            <p class="text-muted mb-4">Configure the greeting message that callers hear when they connect to the voice assistant. This message is spoken by the AI at the start of each call.</p>

            <form id="greetingForm">
              <div class="mb-3">
                <label for="greeting" class="form-label">Greeting Message</label>
                <textarea class="form-control" id="greeting" name="greeting" rows="5" placeholder="Enter the greeting message..."><%= greeting %></textarea>
                <div class="form-text">This message will be spoken exactly as written. Keep it friendly and concise.</div>
              </div>

              <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" title="Save greeting message">
                  <i class="bi bi-save me-2"></i>Save Greeting
                </button>
                <div>
                  <button type="button" class="btn btn-outline-secondary me-2" id="previewBtn" data-bs-toggle="tooltip" title="Preview greeting using text-to-speech" onclick="previewGreeting()">
                    <i class="bi bi-play-fill me-2"></i>Preview (Text-to-Speech)
                  </button>
                  <button type="button" class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Stop playing preview" onclick="stopPreview()" style="display:none;" id="stopBtn">
                    <i class="bi bi-stop-fill me-2"></i>Stop
                  </button>
                </div>
              </div>
              <div id="ttsStatus" class="mt-2 small text-muted">Initializing TTS...</div>
              <button type="button" class="btn btn-sm btn-link mt-1" data-bs-toggle="tooltip" title="Test text-to-speech functionality" onclick="testTTS()">Test TTS with "Hello"</button>
            </form>
          </div>
        </div>

        <!-- Tips Card -->
        <div class="card">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Tips for a Good Greeting</h5>
          </div>
          <div class="card-body">
            <ul class="mb-0">
              <li><strong>Keep it short:</strong> Aim for 2-3 sentences. Long greetings can frustrate callers.</li>
              <li><strong>Identify yourself:</strong> Start with your organization name so callers know they've reached the right place.</li>
              <li><strong>Set expectations:</strong> Briefly mention what you can help with.</li>
              <li><strong>Invite interaction:</strong> End with a question or invitation to speak.</li>
              <li><strong>Avoid special characters:</strong> Stick to plain text for best voice synthesis.</li>
            </ul>
          </div>
        </div>

        <!-- Character Count -->
        <div class="mt-3 text-muted">
          <small>Character count: <span id="charCount">0</span> / Recommended: under 300 characters</small>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el) });
  </script>
  <script>
    const token = '<%= token %>';
    const greetingTextarea = document.getElementById('greeting');
    const charCount = document.getElementById('charCount');

    // Update character count
    function updateCharCount() {
      charCount.textContent = greetingTextarea.value.length;
      charCount.className = greetingTextarea.value.length > 300 ? 'text-warning' : '';
    }
    greetingTextarea.addEventListener('input', updateCharCount);
    updateCharCount();

    function showToast(message, type = 'success') {
      const container = document.querySelector('.toast-container');
      const toast = document.createElement('div');
      toast.className = `toast show align-items-center text-bg-${type} border-0`;
      toast.innerHTML = `
        <div class="d-flex">
          <div class="toast-body">${message}</div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      `;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    // Save greeting
    document.getElementById('greetingForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const greeting = greetingTextarea.value.trim();

      if (!greeting) {
        showToast('Please enter a greeting message', 'danger');
        return;
      }

      try {
        const res = await fetch(`/admin/greeting?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ greeting })
        });

        if (res.ok) {
          showToast('Greeting saved successfully!');
        } else {
          showToast('Failed to save greeting', 'danger');
        }
      } catch (err) {
        showToast('Error saving greeting', 'danger');
      }
    });

    // Preview greeting using OpenAI TTS API (same as test page)
    const ttsStatus = document.getElementById('ttsStatus');
    const previewBtn = document.getElementById('previewBtn');
    const stopBtn = document.getElementById('stopBtn');
    let currentAudio = null;

    ttsStatus.textContent = 'Ready - uses OpenAI TTS (same voice as calls)';

    function stopPreview() {
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }
      previewBtn.style.display = 'inline-block';
      stopBtn.style.display = 'none';
      ttsStatus.textContent = 'Stopped';
    }

    async function previewGreeting() {
      const text = greetingTextarea.value.trim();
      if (!text) {
        showToast('Please enter a greeting message first', 'warning');
        return;
      }

      // Stop any playing audio
      if (currentAudio) {
        currentAudio.pause();
        currentAudio = null;
      }

      ttsStatus.textContent = 'Generating audio...';
      ttsStatus.className = 'mt-2 small text-info';
      previewBtn.disabled = true;

      try {
        const response = await fetch(`/admin/greeting/preview?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ text })
        });

        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.error || 'Failed to generate audio');
        }

        // Get audio blob and play it
        const audioBlob = await response.blob();
        const audioUrl = URL.createObjectURL(audioBlob);

        currentAudio = new Audio(audioUrl);

        currentAudio.onplay = () => {
          ttsStatus.textContent = 'Playing...';
          ttsStatus.className = 'mt-2 small text-success';
          previewBtn.style.display = 'none';
          stopBtn.style.display = 'inline-block';
          showToast('Playing preview...', 'info');
        };

        currentAudio.onended = () => {
          ttsStatus.textContent = 'Preview complete';
          ttsStatus.className = 'mt-2 small text-muted';
          previewBtn.style.display = 'inline-block';
          stopBtn.style.display = 'none';
          previewBtn.disabled = false;
          URL.revokeObjectURL(audioUrl);
          currentAudio = null;
        };

        currentAudio.onerror = (e) => {
          console.error('Audio error:', e);
          ttsStatus.textContent = 'Failed to play audio';
          ttsStatus.className = 'mt-2 small text-danger';
          previewBtn.style.display = 'inline-block';
          stopBtn.style.display = 'none';
          previewBtn.disabled = false;
          showToast('Failed to play audio', 'danger');
        };

        await currentAudio.play();
        previewBtn.disabled = false;

      } catch (err) {
        console.error('Preview error:', err);
        ttsStatus.textContent = 'Error: ' + err.message;
        ttsStatus.className = 'mt-2 small text-danger';
        previewBtn.disabled = false;
        showToast('Error: ' + err.message, 'danger');
      }
    }

    // Simple test function
    async function testTTS() {
      ttsStatus.textContent = 'Testing with OpenAI...';
      try {
        const response = await fetch(`/admin/greeting/preview?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ text: 'Hello, this is a test of the voice preview.' })
        });

        if (!response.ok) throw new Error('Failed');

        const audioBlob = await response.blob();
        const audio = new Audio(URL.createObjectURL(audioBlob));
        audio.onplay = () => { ttsStatus.textContent = 'Test playing...'; };
        audio.onended = () => { ttsStatus.textContent = 'Test complete! OpenAI TTS is working.'; };
        audio.onerror = () => { ttsStatus.textContent = 'Test failed: audio playback error'; };
        await audio.play();
      } catch (err) {
        ttsStatus.textContent = 'Test failed: ' + err.message;
      }
    }
  </script>
</body>
</html>
