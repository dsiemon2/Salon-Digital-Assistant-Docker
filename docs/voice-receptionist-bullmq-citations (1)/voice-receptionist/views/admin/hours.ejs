<% layout('layout', { token }) %>
<form class="card" method="post" action="/admin/hours">
  <input type="hidden" name="token" value="<%= token %>"/>
  <h2>Edit Address & Hours</h2>
  <label>Address</label>
  <input name="address" value="<%= cfg?.address || '' %>" />

  <label>Hours JSON</label>
  <textarea name="hoursJson" rows="8"><%= cfg?.hoursJson || '{ "Mon-Fri": "9am-6pm" }' %></textarea>

  <p><button class="btn" type="submit">Save</button></p>
  <p><small class="mono">Tip: Provide a JSON object, e.g. {"Mon-Fri":"9am-6pm","Sat":"Closed","Sun":"Closed"}</small></p>
</form>
