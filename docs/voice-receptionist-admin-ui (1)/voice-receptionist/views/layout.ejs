      th, td { padding:10px; border-bottom:1px solid #1e2a62; text-align:left; }
      nav a { margin-right: 14px; }
      small.mono { font-family: ui-monospace, SFMono-Regular, Menlo, Consolas, monospace; color:#a7b1e1; }
