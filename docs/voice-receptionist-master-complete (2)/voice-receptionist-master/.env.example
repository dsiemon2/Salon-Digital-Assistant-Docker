# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_VOICE_NUMBER=+1xxxxxxxxxx
TWILIO_AGENT_TRANSFER_NUMBER=+1yyyyyyyyyy

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview
OPENAI_TTS_VOICE=alloy

# Storage
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/voice
REDIS_URL=redis://localhost:6379

# Notifications
ALERT_EMAIL=ops@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# App
PUBLIC_BASE_URL=https://abcdef.ngrok.io
PORT=3000
NODE_ENV=development

# (Optional) Twilio Messaging
TWILIO_MESSAGING_SERVICE_SID=


# (Optional) Google Calendar booking
GOOGLE_CALENDAR_ID=primary
# Base64-encoded service account JSON (use Workspace or delegated access)
GOOGLE_CALENDAR_SA_B64=


# (Optional) Microsoft 365 Calendar booking (Client Credentials flow)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
# Calendar owner (UPN/email) where events will be created
M365_CALENDAR_USER=you@yourdomain.com

# Admin UI auth (simple shared token)
ADMIN_TOKEN=change-me


# (Optional) OpenAI STT model for voicemail transcription
OPENAI_STT_MODEL=whisper-1
